<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_imgdetail">

                <ImageView
                    android:id="@+id/vpMainImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gunung_slamet"/>
            </androidx.cardview.widget.CardView>
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/circle"
                    android:contentDescription="Back"
                    android:padding="4dp"
                    android:src="@drawable/btn_back"
                    tools:ignore="TouchTargetSizeCheck" />
                <ImageButton
                    android:id="@+id/action_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/circle"
                    android:contentDescription="Share"
                    android:padding="8dp"
                    android:src="@drawable/share"
                    tools:ignore="TouchTargetSizeCheck" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMountainName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gunung Andong"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvMountainRegion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jawa Tengah, Indonesia"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMountainPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$25K"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:gravity="end"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_info_container"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="12sp"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Non-Aktif"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"
                    android:layout_marginHorizontal="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elevation"
                        android:textSize="12sp"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/tv_elevation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,726 mdpl"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#CCCCCC"
                    android:layout_marginHorizontal="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textSize="12sp"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="73°–99°"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDescriptionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gunung Andong adalah gunung yang terletak di Jawa Tengah..."
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"
                android:gravity="start|end"
                android:justificationMode="inter_word" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fasilitas"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vpFasilitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:contentDescription="vpFacilities"
                android:orientation="horizontal"
                android:scrollbars="none" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
